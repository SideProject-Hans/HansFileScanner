# Auto detect text files and perform LF normalization
* text=auto

# Force LF line endings for Rust files
*.rs text eol=lf
*.toml text eol=lf

# Force LF for shell scripts
*.sh text eol=lf

# Force LF for configuration files
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf

# Force CRLF for Windows batch files
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.exe binary
*.dll binary
