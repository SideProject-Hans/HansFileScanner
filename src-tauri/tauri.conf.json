{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "HansFileScanner",
  "version": "0.1.0",
  "identifier": "com.hans.filescanner",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Hans File Scanner - 跨平台檔案掃描工具",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "DeveloperTool",
    "shortDescription": "跨平台檔案掃描工具",
    "longDescription": "Hans File Scanner 是一個跨平台的檔案掃描工具，可以掃描資料夾、檢視檔案資訊、篩選搜尋、刪除和複製檔案。"
  }
}
